<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_frag"
    tools:context=".MainActivityFragment">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AnnouncementsTitle"
            android:text="Announcements"
            android:textSize="22dp"
            android:layout_weight="1"
            android:gravity="center"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="add Announcement"
                android:clickable="true"
                android:onClick="addAnnouncement"/>
        </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AnnouncementsMessage"
        android:text="No announcements have been made yet."
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:textColor="@color/red"
        android:gravity=""/>
    </LinearLayout>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="75dp"
    >
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/billsTitle"
            android:text="Bills at a Glance:"
            android:textSize="22dp"
            android:gravity=""/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/billsSnapShot"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choresTitle"
        android:text="Chores at a Glance:"
        android:textSize="22dp"
        android:gravity=""/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choresSnapShot"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groceryTitle"
        android:text="Groceries at a Glance:"
        android:textSize="22dp"
        android:gravity=""/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groceriesSnapShot"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MaintTitle"
        android:text="Maintenance at a Glance:"
        android:textSize="22dp"
        android:gravity=""/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maintenanceSnapShot"/>

</LinearLayout>
</ScrollView>
</RelativeLayout>
